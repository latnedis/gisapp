<p id="notice"><%= notice %></p>

<h1>Listing Momuments</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Alternative name</th>
      <th>Culture</th>
      <th>Monument type</th>
      <th>Description</th>
      <th>Length</th>
      <th>Width</th>
      <th>Approximate area</th>
      <th>Photo</th>
      <th>Architectural style</th>
      <th>Technical condition</th>
      <th>Material</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @momuments.each do |momument| %>
      <tr>
        <td><%= momument.code %></td>
        <td><%= momument.alternative_name %></td>
        <td><%= momument.culture %></td>
        <td><%= momument.monument_type %></td>
        <td><%= momument.description %></td>
        <td><%= momument.length %></td>
        <td><%= momument.width %></td>
        <td><%= momument.approximate_area %></td>
        <td><%= momument.photo %></td>
        <td><%= momument.architectural_style %></td>
        <td><%= momument.technical_condition %></td>
        <td><%= momument.material %></td>
        <td><%= link_to 'Show', momument %></td>
        <td><%= link_to 'Edit', edit_momument_path(momument) %></td>
        <td><%= link_to 'Destroy', momument, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

